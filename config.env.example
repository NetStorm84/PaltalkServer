# Paltalk Server Configuration
# Copy this file to config.env and modify as needed

# Server Ports
CHAT_PORT=5001
VOICE_PORT=2090
WEB_PORT=3000

# Server Limits
MAX_USERS=100
MAX_ROOMS=20
MAX_MESSAGE_LENGTH=1000

# Database Configuration
DB_PATH=./database.db
DB_BACKUP_INTERVAL=3600000

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Voice Server Configuration
VOICE_QUALITY=medium
VOICE_BUFFER_SIZE=4096
VOICE_TIMEOUT=30000

# Web Interface Configuration
WEB_ENABLE=true
WEB_REALTIME_UPDATES=true
WEB_MAX_LOG_ENTRIES=1000

# Security
ENABLE_RATE_LIMITING=true
MAX_CONNECTIONS_PER_IP=10
CONNECTION_TIMEOUT=300000

# Development
DEBUG_MODE=false
VERBOSE_LOGGING=false
